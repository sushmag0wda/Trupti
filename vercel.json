{
  "version": 2,
  "builds": [
    {
      "src": "food_management/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb",
        "pythonRuntime": "3.9",
        "includeFiles": [
          "**/*",
          "!venv/**",
          "!__pycache__/**"
        ]
      }
    },
    {
      "src": "staticfiles/",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/media/(.*)", "dest": "/media/$1" },
    { "src": "/admin/(.*)", "dest": "/admin/$1" },
    { "src": "/(.*)", "dest": "food_management/wsgi.py" }
  ]
}
